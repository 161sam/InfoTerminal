{
  "uid": "infra-overview",
  "title": "Infra Overview",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage per Pod",
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\",pod!=\"\"}[5m])) by (pod)", "datasource": "Prometheus" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage per Pod",
      "targets": [
        { "expr": "sum(container_memory_usage_bytes{container!=\"\",pod!=\"\"}) by (pod)", "datasource": "Prometheus" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Pod Restarts",
      "targets": [
        { "expr": "sum(increase(kube_pod_container_status_restarts_total[1h])) by (pod)", "datasource": "Prometheus" }
      ]
    },
    {
      "type": "stat",
      "title": "Agent Tool Calls",
      "targets": [
        { "expr": "sum(agent_tool_calls_total)", "datasource": "Prometheus" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Agent Policy Denials",
      "targets": [
        { "expr": "sum(agent_policy_denied_total)", "datasource": "Prometheus" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Agent Rate Limit Blocks",
      "targets": [
        { "expr": "sum(agent_rate_limit_block_total)", "datasource": "Prometheus" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Feed Items Fetched",
      "targets": [
        { "expr": "sum(feed_items_fetched_total)", "datasource": "Prometheus" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Feed Items Ingested",
      "targets": [
        { "expr": "sum(feed_items_ingested_total)", "datasource": "Prometheus" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "OTX â†’ Graph Items Ingested",
      "targets": [
        {
          "expr": "sum(feed_items_ingested_total{source=\"otx\",target=\"graph\"})",
          "datasource": "Prometheus"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Feed Dedup Skipped",
      "targets": [
        { "expr": "sum(feed_dedup_skipped_total)", "datasource": "Prometheus" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "Agent Tool Latency P95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(agent_tool_latency_seconds_bucket[5m])) by (le, tool))",
          "legendFormat": "{{tool}}",
          "datasource": "Prometheus"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Agent Rate Limited (by Scope)",
      "targets": [
        {
          "expr": "sum(rate(agent_rate_limited_total[5m])) by (scope)",
          "legendFormat": "{{scope}}",
          "datasource": "Prometheus"
        }
      ]
    }
  ]
}
