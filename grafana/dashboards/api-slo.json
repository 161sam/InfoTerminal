{
  "uid": "api-slo",
  "title": "API SLO",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "p95 latency",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(http_server_duration_seconds_bucket[5m])) by (le))", "datasource": "Prometheus" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Throughput",
      "targets": [
        { "expr": "sum(rate(http_requests_total[1m]))", "datasource": "Prometheus" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "targets": [
        { "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))", "datasource": "Prometheus" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Trace p95 latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(tempo_spanmetrics_latency_bucket{service=\"gateway\"}[5m])) by (le))",
          "datasource": "Prometheus"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top endpoints (spans/min)",
      "targets": [
        {
          "expr": "topk(5, sum(rate(tempo_spanmetrics_spans_total{service=\"gateway\"}[5m])) by (span_name))",
          "datasource": "Prometheus"
        }
      ],
      "transformations": []
    }
  ]
}
