name: ci
on:
  push: { branches: ["**"] }
  pull_request: {}
jobs:
  lint-and-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Python check
        uses: astral-sh/uv-action@v1
        with:
          working-directory: services/search-api
      - run: uv pip install -r <(echo fastapi uvicorn opensearch-py)
      - run: python -c "import fastapi, opensearchpy; print('ok')"
      - name: Install policy tools
        run: |
          wget -qO /tmp/conftest.tar.gz https://github.com/open-policy-agent/conftest/releases/download/v0.44.1/conftest_0.44.1_Linux_x86_64.tar.gz
          tar -C /usr/local/bin -xf /tmp/conftest.tar.gz conftest
          wget -qO /usr/local/bin/kubeconform https://github.com/yannh/kubeconform/releases/download/v0.6.3/kubeconform-linux-amd64
          chmod +x /usr/local/bin/kubeconform
      - run: conftest test infra/**/*.yaml
      - run: kubeconform -strict -summary infra/**/*.yaml
      - name: Node check
        uses: actions/setup-node@v4
        with: { node-version: "20" }
      - run: cd apps/frontend && pnpm i && pnpm build
