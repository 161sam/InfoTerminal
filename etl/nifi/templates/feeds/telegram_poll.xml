<template encoding-version="1.3">
  <name>telegram_get_updates</name>
  <description>InvokeHTTP Telegram Bot API getUpdates â†’ LogAttribute</description>
  <snippet>
    <processors>
      <processor>
        <id>tg-1</id>
        <name>InvokeHTTP (Telegram)</name>
        <class>org.apache.nifi.processors.standard.InvokeHTTP</class>
        <maxConcurrentTasks>1</maxConcurrentTasks>
        <schedulingPeriod>30 sec</schedulingPeriod>
