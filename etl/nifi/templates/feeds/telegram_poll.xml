        <schedulingPeriod>30 sec</schedulingPeriod>
      </processor>
    </processors>
    <connections>
      <connection><id>tg-c1</id><sourceId>tg-1</sourceId><sourceRelationship>response</sourceRelationship><destinationId>tg-2</destinationId></connection>
    </connections>
    <inputPorts/><outputPorts/><funnels/><labels/><controllerServices/>
  </snippet>
  <timestamp>2025-09-10T00:00:00Z</timestamp>
  <description>Parameters: telegram.bot.token</description>
</template>
