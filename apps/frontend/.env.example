# Feature Flags
NEXT_PUBLIC_FEATURE_AGENT=1
NEXT_PUBLIC_FEATURE_NLP=1
NEXT_PUBLIC_FEATURE_PLUGINS=1
NEXT_PUBLIC_FEATURE_WORKFLOWS=1
NEXT_PUBLIC_FEATURE_MULTI_AGENT=1

# Agent Configuration
NEXT_PUBLIC_AGENT_DEFAULT_TYPE=research_assistant
NEXT_PUBLIC_AGENT_MAX_ITERATIONS=10
NEXT_PUBLIC_AGENT_INCLUDE_STEPS=true
NEXT_PUBLIC_AGENT_TIMEOUT=300000

# Development Settings
NEXT_PUBLIC_DEBUG_AGENT=false
NEXT_PUBLIC_LOG_LEVEL=info
