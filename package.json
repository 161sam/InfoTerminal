{
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^8.56.12",
    "@vitest/coverage-v8": "^1.6.1",
    "jsdom": "^27.0.0",
    "markdown-link-check": "^3.12.2",
    "markdownlint-cli": "^0.45.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.1"
  },
  "name": "info-terminal",
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "private": true,
  "scripts": {
    "build:fe": "npm -w apps/frontend run build",
    "dev:fe": "npm -w apps/frontend run dev",
    "fmt": "prettier -w 'docs/**/*.md' 'cli/**/*.md' 'README.md'",
    "fmt:md": "prettier --write $(git ls-files '*.md')",
    "lint:docs": "npm -w docs run lint || echo 'skip'",
    "lint:docs:md": "npm run lint:md && npm run lint:md:links",
    "lint:md": "markdownlint 'docs/**/*.md' 'cli/**/*.md' 'README.md'",
    "lint:md:fix": "markdownlint 'docs/**/*.md' 'cli/**/*.md' 'README.md' --fix",
    "lint:md:links": "markdown-link-check -q -c .mlc.config.json docs/**/*.md",
    "test:fe": "npm -w apps/frontend test"
  },
  "workspaces": [
    "apps/*",
    "services/gateway"
  ],
  "dependencies": {
    "leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1"
  }
}
